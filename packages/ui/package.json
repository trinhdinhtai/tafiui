{
  "name": "@tafi/ui",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    "./style.css": "./dist/index.css",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "pnpm build:layout && pnpm build:tailwind",
    "dev": "pnpm dev:layout & pnpm dev:tailwind",
    "lint": "eslint src/",
    "build:layout": "tsup",
    "build:tailwind": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "dev:layout": "tsup --watch",
    "dev:tailwind": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@tafi/eslint-config": "workspace:*",
    "@tafi/tailwind-config": "workspace:*",
    "@tafi/typescript-config": "workspace:*",
    "@types/react": "^18.2.61",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.1.0",
    "typescript": "^5.3.3"
  }
}
